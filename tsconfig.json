{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
     "outDir": "./dist",
     "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es6"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
